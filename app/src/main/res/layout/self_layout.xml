<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#141931"
    android:layout_height="match_parent">
    <ImageView
        android:src="@mipmap/invalid_name"
        android:layout_width="match_parent"
        android:layout_height="175dp"/>
    <TextView
        android:layout_marginTop="41dp"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:text="我的"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginTop="44dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:src="@mipmap/xinxi"
        android:layout_width="22dp"
        android:layout_height="17dp"/>
    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/self"
        android:layout_width="312dp"
        android:orientation="horizontal"
        android:layout_height="90dp">
        <ImageView
            android:background="@drawable/image"
            android:id="@+id/img_tou"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="46dp"
            android:layout_height="46dp"/>
        <TextView
            android:id="@+id/tv_userName"
            android:layout_marginTop="34dp"
            android:layout_marginLeft="16dp"
            android:text="电影故事"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView

            android:id="@+id/img_xiangqing"
            android:layout_marginLeft="146dp"
            android:layout_marginTop="36dp"
            android:src="@mipmap/shape"
            android:layout_width="8dp"
            android:layout_height="12dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:background="#1c2243"
        android:layout_width="312dp"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <ImageView
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/wodedianyingpiao"
            android:layout_width="24dp"
            android:layout_height="20dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="电影票"
            android:textSize="14sp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="13dp"
            android:layout_marginLeft="200dp"
            android:src="@mipmap/shapew"
            android:layout_width="7dp"
            android:layout_height="12dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="312dp"
        android:layout_height="235dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:background="@drawable/rela">

        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="46dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/group1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginTop="2dp"
                android:text="我的关注"
                android:textColor="#fff"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="46dp"
            android:layout_marginLeft="132dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/group2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginTop="2dp"
                android:text="我的预约"
                android:textColor="#fff"
                android:textSize="8sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="46dp"
            android:layout_marginLeft="252dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/group3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginTop="2dp"
                android:text="购票记录"
                android:textColor="#fff"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="46dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="96dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/group4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginTop="2dp"
                android:text="看过的电影"
                android:textColor="#fff"
                android:textSize="8sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="46dp"
            android:layout_marginLeft="132dp"
            android:layout_marginTop="94dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/group5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginTop="2dp"
                android:text="我的评论"
                android:textColor="#fff"
                android:textSize="8sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="46dp"
            android:layout_marginLeft="252dp"
            android:layout_marginTop="94dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/group6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginTop="2dp"
                android:text="意见反馈"
                android:textColor="#fff"
                android:textSize="8sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="46dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="169dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_shezhi"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/group7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginTop="2dp"
                android:text="设置"
                android:textColor="#fff"
                android:textSize="8sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
